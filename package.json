{
  "name": "solid-ui",
  "private": true,
  "scripts": {
    "dev": "pnpm -r dev",
    "build": "pnpm -r build",
    "test": "pnpm -r test",
    "lint": "pnpm -r lint",
    "docs:dev": "pnpm --filter docs dev",
    "docs:build": "pnpm --filter docs build",
    "start": "pnpm build-deps && pnpm docs:dev",
    "build-deps": "pnpm --filter \"./packages/theme\" build && pnpm --filter \"./packages/utils\" build && pnpm --filter \"./packages/components\" build"
  },
  "devDependencies": {
    "typescript": "^5.0.0",
    "vite": "^4.0.0",
    "vitest": "^0.34.0",
    "@testing-library/jest-dom": "^5.16.5",
    "@solidjs/testing-library": "^0.8.4",
    "@types/testing-library__jest-dom": "^5.14.5",
    "eslint": "^8.0.0",
    "prettier": "^2.8.0",
    "solid-js": "^1.7.0",
    "vite-plugin-solid": "^2.7.0",
    "vite-plugin-dts": "^2.0.0",
    "jsdom": "^22.1.0"
  }
}